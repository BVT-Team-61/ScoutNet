        input#inputStatC(type="number", placeholder="Throws", name="StatC")
        input#inputStatD(type="number", placeholder="Catches", name="StatD")
        br
        textarea#inputComment(placeholder="Comments", name="comment")
        br
        button#btnSubmitEntry Create

  script(src="/javascripts/dataentry.js")
