extends layout

block content
  // Wrapper
  #wrapper

    // ADD USER
    h2 New Entry 
    fieldset#formNewEntry(name="addmatch",method="post")
        select#inputMatch(list="matches", placeholder="Match", name="match")
            //Autofill Matches
        select#inputTeam(list="teams", placeholder="Team", name="team")
            //Autofill Teams
        br
        input#inputStatA(type="number", placeholder="High Goals", name="StatA")
        input#inputStatB(type="number", placeholder="Low Goals", name="StatB")
