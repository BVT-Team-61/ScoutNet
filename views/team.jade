extends layout

block content
  // Wrapper
  #wrapper
    h2 Team Info
    table#teaminfo
      tbody
        tr
          th Team
          td= team.teamNo
          th Name
          td= team.name
        tr
          th Avg High Goals
          td#avgHigh
          th Avg Low Goals
          td#avgLow
        tr
          th Avg C
          td#avgThrow
          th Avg D
          td#avgCatch
    br
    // ENTRY LIST
    h2 Entry List
    #userList
        input.search(placeholder="Search")
        table#entrylist
            thead
                th
                  button.sort(data-sort="match") Match
                th
                  button.sort(data-sort="A")= niceNames[0]
                th
                  button.sort(data-sort="B")= niceNames[1]
                th
                  button.sort(data-sort="C")= niceNames[2]
                th
                  button.sort(data-sort="D")= niceNames[3]
                th
                  button.sort(data-sort="comment") Comment
            tbody.list
              each entry, i in entrylist
                tr
                  td.id(style="display:none;")= entry.id
                  td.matchid(style="display:none;")= entry.links.from
                  td.match ###
                  td.A= entry.A
                  td.B= entry.B
                  td.C= entry.C
                  td.D= entry.D
                  td.comment= entry.comment
  script(src="/javascripts/list.min.js")
  script(src="/javascripts/team.js")
